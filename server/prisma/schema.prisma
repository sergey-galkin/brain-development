// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  login    String   @unique
  email    String
  password String
  salt     String
  created  DateTime @default(now())
  role     Role     @default(USER)
  results  Result[]

  @@index([login, email, created])
}

model Result {
  id       Int    @id @default(autoincrement())
  gameName String
  best     Int?
  user     User   @relation(fields: [userId], references: [id])
  userId   Int    @unique

  @@index([userId, gameName])
}

model Info {
  id          Int @id @default(autoincrement())
  gamesAmount Int @default(0)
}

enum Role {
  USER
  ADMIN
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
